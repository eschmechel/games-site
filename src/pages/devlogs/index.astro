---
import Base from '../../layouts/Base.astro';
import ThemeToggle from '../../components/ui/ThemeToggle.astro';
import { posts } from '../../utils/devlogData';
import SocialFooter from '../../components/ui/SocialFooter.astro';

const pageTitle = "Development Logs";
const description = "Behind-the-scenes insights, lessons learned, and technical deep-dives from the 20 Games Challenge";

// Use only posts from devlogData
const allPosts = posts;

// Group posts by category if they have tags
const postmortems = allPosts.filter(post => post.tags?.includes('postmortem'));
const technical = allPosts.filter(post => post.tags?.includes('performance') || post.tags?.includes('optimization') || post.tags?.includes('wasm'));
const gamedev = allPosts.filter(post => post.tags?.includes('gamedev') || post.tags?.includes('workflow') || post.tags?.includes('prototyping'));
const recent = allPosts.slice(0, 3);
---

<Base title={pageTitle} description={description}>
  <style>
    a {
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid currentColor;
    }
    a.pill, a.card { border-bottom: 0; }

    header, main, footer {
      max-width: 960px;
      margin: 0 auto;
      padding: 16px;
    }
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }
    .nav-links {
      display: flex;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
    }

    .pill {
      display: inline-block;
      padding: 8px 12px;
      border: 2px solid var(--border);
      background: linear-gradient(180deg, var(--card), color-mix(in lab, var(--card) 88%, black));
      box-shadow:
        0 1px 0 #00000040,
        inset 0 1px 0 #ffffff0d;
      border-radius: 6px;
      transition: transform .12s ease, background .2s ease, box-shadow .2s ease;
    }
    .pill:hover {
      transform: translateY(-1px);
      box-shadow:
        0 2px 0 #00000040,
        inset 0 1px 0 #ffffff12;
    }

    .hero {
      position: relative;
      border: 2px solid var(--border);
      background: var(--card);
      padding: 18px;
      margin: 20px 0;
      border-radius: 10px;
      background-image: var(--grad-hero);
      background-blend-mode: screen;
      overflow: hidden;
    }
    .hero::before {
      content: "";
      position: absolute;
      inset: 0;
      pointer-events: none;
      border-radius: inherit;
      box-shadow: inset 0 0 0 1px #ffffff0f;
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 32px 0 16px;
    }
    .section-header h2 {
      margin: 0;
      letter-spacing: .5px;
      text-shadow: 0 1px 0 rgba(0,0,0,.15);
    }

    .grid {
      display: grid;
      gap: 16px;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      margin-bottom: 32px;
    }

    .post-card {
      padding: 20px;
      border: 2px solid var(--border);
      background: linear-gradient(180deg, var(--card), color-mix(in lab, var(--card) 86%, black));
      border-radius: 8px;
      position: relative;
      transition: transform .12s ease, border-color .2s ease, box-shadow .2s ease;
    }
    .post-card::after {
      content: "";
      position: absolute;
      left: 0; right: 0; top: 0;
      height: 3px;
      background: var(--grad-accent);
      opacity: .5;
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }
    .post-card:hover {
      transform: translateY(-2px);
      border-color: color-mix(in lab, var(--border), var(--accent-cyan) 35%);
      box-shadow: 0 6px 16px #00000040;
    }

    .post-card h3 {
      margin: 0 0 8px;
      letter-spacing: .5px;
      line-height: 1.3;
    }

    .post-excerpt {
      color: var(--fg-muted);
      line-height: 1.5;
      margin: 12px 0;
    }

    .post-meta {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 12px;
      margin-top: 16px;
      font-size: 0.9em;
      color: var(--fg-muted);
    }

    .post-date {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .post-tags {
      display: flex;
      gap: 6px;
      flex-wrap: wrap;
    }

    .tag {
      padding: 2px 6px;
      border: 1px solid var(--border);
      background: color-mix(in lab, var(--card), var(--bg) 20%);
      border-radius: 3px;
      font-size: 0.8em;
    }

    .featured-post {
      grid-column: 1 / -1;
      background: linear-gradient(135deg, var(--card), color-mix(in lab, var(--card) 90%, var(--accent-pink) 5%));
    }

    .placeholder-card {
      padding: 20px;
      border: 2px dashed var(--border);
      background: color-mix(in lab, var(--card), transparent 50%);
      border-radius: 8px;
      text-align: center;
      color: var(--fg-muted);
      position: relative;
    }

    .placeholder-grid {
      display: grid;
      gap: 16px;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      margin-bottom: 32px;
      opacity: 0.7;
    }

    .muted { color: var(--fg-muted); }
  </style>

  <header>
    <nav>
      <div class="nav-links">
        <a href="/" class="pill">Info</a>
        <a href="/games" class="pill">Games</a>
        <a href="/devlogs" class="pill">Devlogs</a>
        <a href="/about" class="pill">About</a>
      </div>
      <ThemeToggle/>
    </nav>
  </header>

  <main>
    <section class="hero">
      <h1 style="margin:0;">Development Logs</h1>
      <p class="muted">
        Behind-the-scenes insights, lessons learned, and technical deep-dives from building 20 games.
      </p>
      <p><strong>Latest thoughts on:</strong> Game performance, Rapid prototyping, Engine comparisons, and Shipping efficient and impactful games.</p>
    </section>

    <div class="section-header">
      <h2>Recent Posts</h2>
    </div>
    {recent.length > 0 ? (
      <div class="grid">
        {recent.map((post, index) => (
          <a href={post.filePath} class={`post-card ${index === 0 ? 'featured-post' : ''}`}>
            <h3>{post.title}</h3>
            {post.excerpt && <p class="post-excerpt">{post.excerpt}</p>}
            <div class="post-meta">
              {post.date && <span class="post-date">üìÖ {post.date}</span>}
              {post.tags && (
                <div class="post-tags">
                  {post.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="placeholder-grid">
        <div class="placeholder-card">
          <p style="margin: 0; font-style: italic;">üìù First devlog coming soon...</p>
          <p style="margin: 8px 0 0; font-size: 0.9em;">Behind-the-scenes insights from game development</p>
        </div>
        <div class="placeholder-card">
          <p style="margin: 0; font-style: italic;">üîß Technical deep-dives planned</p>
          <p style="margin: 8px 0 0; font-size: 0.9em;">Performance tips, engine comparisons, and more</p>
        </div>
        <div class="placeholder-card">
          <p style="margin: 0; font-style: italic;">üéÆ Game postmortems on the way</p>
          <p style="margin: 8px 0 0; font-size: 0.9em;">Lessons learned from each completed game</p>
        </div>
      </div>
    )}

    {postmortems.length > 0 && (
      <>
        <div class="section-header">
          <h2>Game Postmortems</h2>
        </div>
        <div class="grid">
          {postmortems.map(post => (
            <a href={post.filePath} class="post-card">
              <h3>{post.title}</h3>
              {post.excerpt && <p class="post-excerpt">{post.excerpt}</p>}
              <div class="post-meta">
                {post.date && <span class="post-date">üìÖ {post.date}</span>}
                {post.tags && (
                  <div class="post-tags">
                    {post.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </>
    )}

    {technical.length > 0 && (
      <>
        <div class="section-header">
          <h2>Technical Deep-Dives</h2>
        </div>
        <div class="grid">
          {technical.map(post => (
            <a href={post.filePath} class="post-card">
              <h3>{post.title}</h3>
              {post.excerpt && <p class="post-excerpt">{post.excerpt}</p>}
              <div class="post-meta">
                {post.date && <span class="post-date">üìÖ {post.date}</span>}
                {post.tags && (
                  <div class="post-tags">
                    {post.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </>
    )}

    {gamedev.length > 0 && (
      <>
        <div class="section-header">
          <h2>Game Development</h2>
        </div>
        <div class="grid">
          {gamedev.map(post => (
            <a href={post.filePath} class="post-card">
              <h3>{post.title}</h3>
              {post.excerpt && <p class="post-excerpt">{post.excerpt}</p>}
              <div class="post-meta">
                {post.date && <span class="post-date">üìÖ {post.date}</span>}
                {post.tags && (
                  <div class="post-tags">
                    {post.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </>
    )}
  </main>

  <footer>
    <SocialFooter/>
  </footer>
</Base>