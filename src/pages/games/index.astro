---
const games = [
  { title:"Tiny Platformer", slug:"tiny-platformer", status:"prototype", web:true, dl:true },
  { title:"Cave Jam", slug:"cave-jam", status:"alpha", web:true, dl:false },
];
---
<html lang="en">
<head><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"><title>Games â€¢ 20GC</title></head>
<body style="margin:0;background:var(--bg);color:var(--fg);font:16px/1.45 system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,sans-serif">
<main style="max-width:820px;margin:0 auto;padding:16px">
  <h1>Games</h1>
  <ul style="list-style:none;padding:0;margin:0">
    {games.map(g => (
      <li style="border:2px solid #222;background:var(--card);padding:12px;margin:8px 0">
        <a href={`/games/${g.slug}`}>{g.title}</a>
        <span class="badge" style="border:1px solid #222;padding:2px 6px;margin-left:8px">{g.status}</span>
        {g.web && <span class="badge" style="border:1px solid #222;padding:2px 6px;margin-left:8px">Web</span>}
        {g.dl && <span class="badge" style="border:1px solid #222;padding:2px 6px;margin-left:8px">Download</span>}
      </li>
    ))}
  </ul>
</main>
</body></html>
