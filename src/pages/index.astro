---
import Base from "../layouts/Base.astro";
import ThemeToggle from "../components/ui/ThemeToggle.astro";
import { posts as allPosts } from "../utils/devlogData";
import { games, type Game } from "../utils/gameData";
import SocialFooter from "../components/ui/SocialFooter.astro";

// const featured = games.slice(0, 3);
const shuffle = (arr: Game[]) => {
  const a = [...arr];
  for (let i = a.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [a[i], a[j]] = [a[j], a[i]];
  }
  return a;
};

const completedGames = games.filter((game) => game.status === "complete");
const featured =
  completedGames.length > 0
    ? shuffle(completedGames).slice(0, Math.min(3, completedGames.length))
    : [];

const posts = allPosts.slice(0, 3);

const pageTitle = "20 Games Challenge";
const description = "Building 20 games to level up my game dev skills";
const progress = completedGames.length;
const total = 20;
const percent = Math.max(
  0,
  Math.min(100, Math.round((progress / total) * 100)),
);

// Calculate days since challenge started
const startDate = new Date("2025-08-05");
const today = new Date();
const daysSinceStart = Math.floor(
  (today.getTime() - startDate.getTime()) / (1000 * 60 * 60 * 24),
);
---

<Base title={pageTitle} description={description}>
  <style>
    a {
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid currentColor;
    }
    a.pill,
    a.card {
      border-bottom: 0;
    }

    header,
    main,
    footer {
      max-width: 960px;
      margin: 0 auto;
      padding: 16px;
    }
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }
    .nav-links {
      display: flex;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
    }

    .pill {
      display: inline-block;
      padding: 8px 12px;
      border: 2px solid var(--border);
      background: linear-gradient(
        180deg,
        var(--card),
        color-mix(in lab, var(--card) 88%, black)
      );
      box-shadow:
        0 1px 0 #00000040,
        inset 0 1px 0 #ffffff0d;
      border-radius: 6px;
      transition:
        transform 0.12s ease,
        background 0.2s ease,
        box-shadow 0.2s ease;
    }
    .pill:hover {
      transform: translateY(-1px);
      box-shadow:
        0 2px 0 #00000040,
        inset 0 1px 0 #ffffff12;
    }

    .days-counter {
      text-align: center;
      margin: 16px 0 8px;
      padding: 12px 20px;
      border: 2px solid var(--border);
      background: linear-gradient(
        135deg,
        var(--card),
        color-mix(in lab, var(--card) 90%, var(--accent-pink) 8%)
      );
      border-radius: 8px;
      font-size: 0.95em;
      color: var(--fg-muted);
      position: relative;
      overflow: hidden;
    }
    .days-counter::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      height: 3px;
      background: var(--grad-accent);
      opacity: 0.6;
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }

    .days-number {
      font-weight: bold;
      color: var(--accent-pink);
    }

    @keyframes gradientShift {
      0%,
      100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }

    .hero {
      position: relative;
      border: 2px solid var(--border);
      background: var(--card);
      padding: 18px;
      margin: 12px 0 20px;
      border-radius: 10px;
      background-image: var(--grad-hero);
      background-blend-mode: screen;
      overflow: hidden;
    }
    .hero::before {
      content: "";
      position: absolute;
      inset: 0;
      pointer-events: none;
      border-radius: inherit;
      box-shadow: inset 0 0 0 1px #ffffff0f;
    }

    /* Progress bar track + fill */
    .bar {
      position: relative;
      height: 8px;
      border-radius: 999px;
      margin: 10px 0 14px;
      background: color-mix(in lab, var(--card), black 18%);
      box-shadow: inset 0 -1px 0 #00000040;
      overflow: hidden;
    }
    .bar::before {
      content: "";
      position: absolute;
      inset: 0 auto 0 0;
      width: var(--progress, 0%);
      background: var(--grad-accent);
      border-radius: inherit;
      box-shadow: inset 0 -1px 0 #00000040;
      transition: width 0.25s ease;
    }

    .challenge-info {
      /* Remove the max-width and centering to match grid width */
      margin: 32px 0;
      line-height: 1.6;
    }

    .challenge-info h3 {
      color: var(--accent-pink);
      margin: 1.5em 0 0.5em;
    }

    .challenge-info h4 {
      margin: 1.2em 0 0.3em;
    }

    .grid {
      display: grid;
      gap: 10px;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    .card {
      padding: 14px 12px;
      border: 2px solid var(--border);
      background: linear-gradient(
        180deg,
        var(--card),
        color-mix(in lab, var(--card) 86%, black)
      );
      border-radius: 8px;
      position: relative;
      transition:
        transform 0.12s ease,
        border-color 0.2s ease,
        box-shadow 0.2s ease;
    }
    .card::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      height: 3px;
      background: var(--grad-accent);
      opacity: 0.5;
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }
    .card:hover {
      transform: translateY(-2px);
      border-color: color-mix(in lab, var(--border), var(--accent-cyan) 35%);
      box-shadow: 0 6px 16px #00000040;
    }

    .placeholder-card {
      padding: 20px;
      border: 2px dashed var(--border);
      background: color-mix(in lab, var(--card), transparent 50%);
      border-radius: 8px;
      text-align: center;
      color: var(--fg-muted);
      position: relative;
    }

    .placeholder-grid {
      display: grid;
      gap: 10px;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      opacity: 0.7;
    }

    .muted {
      color: var(--fg-muted);
    }

    h1,
    h2 {
      letter-spacing: 0.5px;
      text-shadow: 0 1px 0 rgba(0, 0, 0, 0.15);
      margin: 0.2em 0 0.4em;
    }
s
  </style>

  <header>
    <nav>
      <div class="nav-links">
        <a class="pill" href="/">Info</a>
        <a class="pill" href="/games">Games</a>
        <a class="pill" href="/devlogs">Devlogs</a>
        <a class="pill" href="/about">About</a>
      </div>
      <ThemeToggle/>
    </nav>
  </header>
  <main>
    <div class="days-counter">
      ðŸ“… Day <span class="days-number">{daysSinceStart}</span> of the challenge
    </div>

    <section class="hero">
