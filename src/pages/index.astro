---
// keep the hero text-only for the <14 kB goal
const featured = [
  { title: "Tiny Platformer", reference: "/games/tiny-platformer" },
  { title: "Cave Jam", reference: "/games/cave-jam" },
  { title: "Puzzle #3", reference: "/games/puzzle-3" },
];
const posts = [
  { title: "Week 4: Input polish", reference: "/blog/week-4" },
  { title: "Postmortem: Runner", reference: "/blog/runner-postmortem" },
  { title: "Godot WASM tips", reference: "/blog/godot-wasm" },
];
const pageTitle = "20 Games Challenge";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" /><meta
      name="viewport"
      content="width=device-width,initial-scale=1"
    />
    <title>{pageTitle}</title>
    <style>
      :root {
        /* Keep tokens in CSS so prefers-color-scheme works at runtime with zero JS */
        --bg: #0f1923;
        --fg: #e6e9f2;
        --card: #141a2e;
        --grad-light: linear-gradient(90deg, #e94e77, #f7c948);
        --grad-dark: linear-gradient(
          135deg,
          #3ddc84 0%,
          #e94e77 50%,
          #f7c948 100%
        );
        --grad-universal: linear-gradient(
          90deg,
          rgba(233, 78, 119, 0.18),
          rgba(247, 201, 72, 0.18)
        );
      }
      @media (prefers-color-scheme: light) {
        :root {
          --bg: #f6f7fb;
          --fg: #1c1f2a;
          --card: #ffffff;
        }
      }
      * {
        box-sizing: border-box;
      }
      html,
      body {
        margin: 0;
        background: var(--bg);
        color: var(--fg);
        font:
          16px/1.45 system-ui,
          -apple-system,
          Segoe UI,
          Roboto,
          Inter,
          Arial,
          sans-serif;
      }
      a {
        color: inherit;
        text-decoration: none;
        border-bottom: 1px solid currentColor;
      }
      header,
      main,
      footer {
        max-width: 820px;
        margin: 0 auto;
        padding: 16px;
      }
      .pill {
        display: inline-block;
        padding: 6px 10px;
        border: 2px solid #222;
        background: var(--card);
        margin-right: 8px;
      }
      .hero {
        border: 2px solid #222;
        background: var(--card);
        padding: 16px;
        margin: 16px 0;
        background-image: var(--grad-dark);
        background-size: cover;
      }
      .bar {
        height: 6px;
        background: var(--grad-universal);
        margin: 8px 0;
      }
      .grid {
        display: grid;
        gap: 8px;
      }
      @media (min-width: 720px) {
        .grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      .card {
        padding: 12px;
        border: 2px solid #222;
        background: var(--card);
      }
      .muted {
        opacity: 0.85;
      }
      footer {
        opacity: 0.8;
        border-top: 1px dashed rgba(255, 255, 255, 0.15);
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <span class="pill">20 Games</span>
        <a class="pill" href="/games">Games</a>
        <a class="pill" href="/blog">Blog</a>
        <a class="pill" href="/about">About</a>
      </nav>
    </header>
    <main>
      <section class="hero">
        <h1 style="margin:0">Level Up: {pageTitle}</h1>
        <div class="bar"></div>
        <p class="muted">
          Pixel-flavored, fast, readable. Web-playable builds, downloads,
          devlogs.
        </p>
        <p><strong>Progress:</strong> 7 / 20 complete</p>
      </section>
      <h2>Featured games</h2>
      <div class="grid">
        {
          featured.map((g) => (
            <a class="card" href={g.reference}>
              {g.title} →
            </a>
          ))
        }
      </div>
      <h2>Latest devlogs</h2>
      <div class="grid">
        {
          posts.map((p) => (
            <a class="card" href={p.reference}>
              {p.title} →
            </a>
          ))
        }
      </div>
    </main>
    <footer>
      <p>
        Find me on <a href="https://github.com/">GitHub</a> · <a
          href="https://itch.io/">itch.io</a
        > · <a href="/rss.xml">RSS</a>
      </p>
    </footer>
  </body>
</html>
